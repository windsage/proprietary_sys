<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.qti.telephonyservice"
    coreApp="true"
    android:sharedUserId="android.uid.qtiphone" >

    <uses-sdk android:minSdkVersion="23"
        android:targetSdkVersion="35"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_ROUTING" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <overlay
        android:targetPackage="com.qualcomm.qti.telephonyservice"
        android:requiredSystemPropertyName="ro.boot.vendor.qspa.modem"
        android:requiredSystemPropertyValue="enabled"/>

    <application android:process="com.qti.phone"
        android:persistent="true"
        android:directBootAware="true">
        <uses-library android:name="qti-telephony-hidl-wrapper" />
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".QtiTelephonyService"
                 android:enabled="true"
                 android:exported="false">
        </service>

    </application>

</manifest>
