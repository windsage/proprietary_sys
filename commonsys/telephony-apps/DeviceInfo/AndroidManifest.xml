<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.qti.qualcomm.deviceinfo"
      android:sharedUserId="android.uid.phone">
    <uses-sdk android:minSdkVersion="28"
        android:targetSdkVersion="35"/>
    <uses-permission android:name="android.permission.CONTROL_INCALL_EXPERIENCE" />
    <uses-permission android:name="android.permission.QTI_SYSTEM_SERVICE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_PROFILES" />

    <overlay
        android:targetPackage="com.qti.qualcomm.deviceinfo"
        android:requiredSystemPropertyName="ro.boot.vendor.qspa.modem"
        android:requiredSystemPropertyValue="enabled"/>

    <application android:label="@string/app_name" android:theme="@style/DeviceInfoTheme">

       <uses-library
           android:name="com.qti.extphone.extphonelib"
           android:required="true" />
       <uses-library
           android:name="qti-telephony-utils"
           android:required="true" />

        <activity android:name=".DeviceInfo"
            android:label="@string/app_name"
            android:process="com.android.phone"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:exported="true">
            <intent-filter>
                <action android:name="org.codeaurora.intent.action.ACTION_DEVICEINFO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".DeviceInfoReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE" />
                <data android:host="0000" android:scheme="android_secret_code" />
            </intent-filter>
        </receiver>

    </application>
</manifest>

