<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/device_icon"
        android:layout_width="@dimen/device_icon"
        android:layout_height="@dimen/device_icon"
        android:layout_marginTop="@dimen/icon_margin"
        android:layout_marginStart="@dimen/icon_margin"
        android:layout_marginBottom="@dimen/icon_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_margin"
        app:layout_constraintTop_toTopOf="@id/device_icon"
        app:layout_constraintStart_toEndOf="@id/device_icon"
        tools:text="This device(presence-demo)"/>

    <TextView
        android:id="@+id/device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/device_icon"
        app:layout_constraintStart_toStartOf="@id/device_name"
        tools:text="Active, 80% battery"/>

    <ImageView
        android:id="@+id/screen_share_state"
        android:layout_width="@dimen/capability_icon"
        android:layout_height="@dimen/capability_icon"
        android:layout_marginTop="@dimen/icon_margin"
        android:layout_marginEnd="@dimen/icon_margin"
        android:layout_marginBottom="@dimen/icon_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>