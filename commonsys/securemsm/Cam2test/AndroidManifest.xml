<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.qti.cam2test">

    <uses-sdk android:targetSdkVersion="33"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Platform.MaterialComponents">
        <activity android:name=".CameraActivity"></activity>
        <activity android:name=".ConfigActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <provider
            xmlns:tools="http://schemas.android.com/tools"
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.google.chromecast.settings.androidx-startup"
            tools:replace="android:authorities" />
    <uses-library android:name="com.qti.media.secureprocessor"/>
    <service android:name="servicestatus" android:stopWithTask="false" />
    </application>

</manifest>
