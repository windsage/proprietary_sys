<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/current_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
        tools:ignore="RelativeOverlap"
        android:text="@string/current_progress"/>

    <ImageView
        android:id="@+id/train_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        android:src="@drawable/popup_close" />

    <com.qualcomm.qti.sva.SoundWave
        android:id="@+id/train_sound_wave"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_below="@id/current_step"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/train_success"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/current_step"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/train_success"
        android:contentDescription="@null"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/train_success_generate"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/current_step"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/didnt_hear_clearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/current_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
        android:text="Match failure"
        android:visibility="gone" />

    <TextView
        android:id="@+id/train_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
        android:text="@string/congratulation"
        android:visibility="gone" />

    <TextView
        android:id="@+id/say_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="32dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
        android:text="@string/say_keyword" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_step"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@id/say_keyword"
        android:text="@string/ok"
        style="?android:attr/buttonBarButtonStyle"
        android:visibility="gone" />

</RelativeLayout>
