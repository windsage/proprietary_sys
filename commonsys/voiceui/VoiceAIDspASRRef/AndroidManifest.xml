<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.qti.voiceai.dspasr"
    android:versionCode="0100000"
    android:versionName="1.0.0" >

    <uses-feature android:glEsVersion="0x00020000" />

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>



    <application
        android:name="com.qualcomm.qti.voiceai.dspasr.ClientApplication"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:extractNativeLibs="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:theme="@style/Theme.VoiceAI">
        <activity
            android:name=".ASRTTSActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VoiceAI.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qualcomm.qti.voiceai.dspasr.SettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.qualcomm.qti.voiceai.dspasr.ASRTTSActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.qualcomm.qti.voiceai.dspasr.PermissionActivity"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" android:exported="false"/>
        <activity
            android:name="com.qualcomm.qti.voiceai.dspasr.LanguageSelectActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" android:exported="false"/>


    </application>

</manifest>
