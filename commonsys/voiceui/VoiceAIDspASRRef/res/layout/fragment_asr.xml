<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:layout_marginTop="40dp"
            android:gravity="top"
            android:background="@drawable/editview_backgroud"
            android:hint="@string/prompt_asr_edit_text_hint"
            android:textIsSelectable="true"
            android:lineSpacingExtra="4sp"
            android:padding="12dp"
            android:textColor="@color/white_alpha_0_95"
            android:textColorHighlight="@color/white_alpha_0_95"
            android:textColorHint="@color/white_alpha_0_55"
            android:textSize="14sp"
            android:translationY="-1.8sp" />

        <LinearLayout
            android:id="@+id/push_to_talk_animation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_input"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/sound_wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sound_wave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="@string/listening"
                android:textColor="@color/white_alpha_0_55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/push_to_talk"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/push_to_talk_animation_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:background="@drawable/asr_tts_active"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/push_to_talk_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="3dp"
                android:clickable="false"
                android:src="@drawable/icn_voice_input_mic"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/push_to_talk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:text="@string/voice_input_start_text"
                android:textAllCaps="false"
                android:textColor="@color/generate_btn_text_color"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/clear_layout"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/push_to_talk"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icn_clear_all"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:text="@string/clear_all"
                android:textAllCaps="false"
                android:textColor="@color/generate_btn_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>