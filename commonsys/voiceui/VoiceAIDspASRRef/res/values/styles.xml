<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
    </style>

    <style name="TransparentTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.VoiceAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorAccent">@color/white_alpha_0_95</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/move</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>

    </style>

    <style name="ToolbarText" parent="Widget.Material3.Toolbar">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.VoiceAI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.NavigationUI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="Theme.NavigationUI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="generic_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_alpha_0_95</item>
    </style>
</resources>
