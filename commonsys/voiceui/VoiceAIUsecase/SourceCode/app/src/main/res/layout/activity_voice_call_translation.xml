<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    android:fitsSystemWindows="true"
    tools:context=".voicecall.ui.VoiceCallSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:minHeight="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="27dp"
                android:gravity="center"
                android:text="@string/voice_call_settings_title"
                android:textColor="@color/colorTextPrimary"
                android:textSize="17sp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/main_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        >
        <Space
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/voice_call_translation_background"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/item_background"
            android:scaleType="fitXY"
            android:src="@drawable/item_background" />

        <TextView
            android:id="@+id/other_language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignTop="@id/voice_call_translation_background"
            android:layout_alignStart="@id/voice_call_translation_background"
            android:text="@string/voice_call_setting_other_language_title"
            android:textColor="@color/transparent_text_color"
            android:textSize="@dimen/second_level_text_size"
            tools:ignore="RelativeOverlap" />
        <Spinner
            android:id="@+id/others_language_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/other_language_title"
            android:layout_alignStart="@id/voice_call_translation_background"
            android:layout_marginStart="16dp"
            android:spinnerMode="dropdown"
            />
        <ImageView
            android:layout_width="37dp"
            android:layout_height="11dp"
            android:src="@drawable/icn_arrow_left_right"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:layout_alignStart="@id/voice_call_translation_background"
            android:layout_alignEnd="@id/voice_call_translation_background"
            android:layout_alignTop="@id/others_language_list"
            android:layout_alignBottom="@id/others_language_list"
            />
        <TextView
            android:id="@+id/my_language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="16dp"
            android:layout_alignTop="@id/voice_call_translation_background"
            android:layout_alignEnd="@id/voice_call_translation_background"
            android:text="@string/voice_call_setting_my_language_title"
            android:textColor="@color/transparent_text_color"
            android:textSize="@dimen/second_level_text_size"
            tools:ignore="RelativeOverlap" />
        <Spinner
            android:id="@+id/my_language_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_language_title"
            android:layout_alignEnd="@id/voice_call_translation_background"
            android:spinnerMode="dropdown"
            />

        <ImageView
            android:id="@+id/mute_my_voice_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/voice_call_translation_background"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/item_background"
            android:scaleType="fitXY"
            android:src="@drawable/item_background" />

        <TextView
            android:id="@+id/mute_my_voice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/voice_call_translation_background"
            android:layout_centerVertical="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="26dp"
            android:text="@string/voice_call_setting_mute_my_voice"
            android:textColor="@color/white"
            android:textSize="@dimen/second_level_text_size"
            tools:ignore="RelativeOverlap" />

        <Switch
            android:id="@+id/mute_my_voice_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/voice_call_translation_background"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="38dp"
            android:thumbTint="@color/switch_color"
            android:thumbTintMode="multiply"
            android:trackTint="@color/color_snapdragon_purple"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageView
            android:id="@+id/mute_other_voice_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/mute_my_voice_background"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/item_background"
            android:scaleType="fitXY"
            android:src="@drawable/item_background" />

        <TextView
            android:id="@+id/mute_other_voice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mute_my_voice_background"
            android:layout_centerVertical="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="26dp"
            android:text="@string/voice_call_setting_mute_others_voice"
            android:textColor="@color/white"
            android:textSize="@dimen/second_level_text_size"
            tools:ignore="RelativeOverlap" />


        <Switch
            android:id="@+id/mute_other_voice_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mute_my_voice_background"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="38dp"
            android:thumbTint="@color/switch_color"
            android:thumbTintMode="multiply"
            android:trackTint="@color/color_snapdragon_purple"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageView
            android:id="@+id/exit_session_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/mute_other_voice_background"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/item_background"
            android:scaleType="fitXY"
            android:src="@drawable/item_background" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mute_other_voice_background"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleX="-1"
            android:layout_marginTop="26dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/icn_chevron_right"
            android:thumbTint="@color/switch_color"
            android:thumbTintMode="multiply"
            android:trackTint="#cc3253dc"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/enable_feature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mute_other_voice_background"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="26dp"
            android:text="@string/voice_call_translation_exit"
            android:textColor="@color/white"
            android:textSize="@dimen/second_level_text_size"
            tools:ignore="RelativeOverlap" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>