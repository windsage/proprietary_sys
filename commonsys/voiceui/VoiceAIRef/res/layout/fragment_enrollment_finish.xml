<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_enrollment_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/enroll_finish_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="25dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/enroll_success"
        android:textColor="@color/colorTips"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/enroll_finish_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="88dp"
        android:contentDescription="@string/continue_when_ready"
        android:scaleType="fitXY"
        android:src="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/back_to_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/back_to_settings"
        android:textColor="@color/colorTips"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/enroll_finish_button"
        app:layout_constraintLeft_toLeftOf="@id/enroll_finish_button"
        app:layout_constraintTop_toTopOf="@id/enroll_finish_button"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/continue_when_ready"
        android:src="@drawable/icn_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/enroll_finish_button"
        app:layout_constraintRight_toRightOf="@id/enroll_finish_button"
        app:layout_constraintTop_toTopOf="@id/enroll_finish_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
