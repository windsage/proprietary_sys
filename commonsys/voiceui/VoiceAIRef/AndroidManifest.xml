<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quicinc.voiceassistant.reference"
    android:versionCode="0100000"
    android:versionName="1.0.0" >

    <uses-feature android:glEsVersion="0x00020000" />

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <queries>
        <package android:name="com.quicinc.voice.activation"/>
    </queries>

    <application
        android:name="com.quicinc.voiceassistant.reference.ClientApplication"
        android:allowBackup="false"
        android:icon="@drawable/icn_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:extractNativeLibs="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:theme="@style/Theme.VoiceAI">
        <activity
            android:name=".ASRTTSActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleInstancePerTask"
            android:theme="@style/Theme.VoiceAI.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quicinc.voiceassistant.reference.SettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.quicinc.voiceassistant.reference.ASRTTSActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.quicinc.voiceassistant.reference.PermissionActivity"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" android:exported="false"/>
        <activity
            android:name="com.quicinc.voiceassistant.reference.LanguageSelectActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" android:exported="false"/>
        <activity
            android:name="com.quicinc.voiceassistant.reference.EnrollmentActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" android:exported="false"/>

        <receiver
            android:name="com.quicinc.voiceassistant.reference.PackageChangedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.quicinc.voice.activation.action.PACKAGE_CHANGED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
