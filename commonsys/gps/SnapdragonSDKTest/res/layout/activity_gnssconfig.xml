<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <TextView
            android:id="@+id/textViewRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set OSNMA Config for Robust Location"
            android:textSize="20sp" />

    <Button
            android:id="@+id/btnConfigMerkleTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRL"
            android:text="configMerkleTree" />

    <Button
            android:id="@+id/btnConfigOsnmaEnablement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConfigMerkleTree"
            android:text="Enable" />

    <Button
            android:id="@+id/btnConfigOsnmaDisablement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConfigMerkleTree"
            android:layout_toRightOf="@id/btnConfigOsnmaEnablement"
            android:text="Disable" />

    <TextView
            android:id="@+id/textViewNTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd PartyNTN configuration"
            android:layout_below="@id/btnConfigOsnmaDisablement"
            android:textSize="20sp" />

    <TextView
            android:id="@+id/textViewSetNTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetNTNCapability"
            android:layout_below="@id/textViewNTN"
            android:textSize="20sp" />
    <Button
            android:id="@+id/setNtnCapTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNTN"
            android:layout_toRightOf="@id/textViewSetNTN"
            android:text="TRUE" />

    <Button
            android:id="@+id/setNtnCapFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNTN"
            android:layout_toRightOf="@id/setNtnCapTrue"
            android:text="FALSE" />

    <Button
            android:id="@+id/registerNtnStatusCallback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setNtnCapFalse"
            android:text="registerNtnStatusCallback" />

    <Button
            android:id="@+id/getNtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerNtnStatusCallback"
            android:text="GetNTNConfigSignalMask" />

    <Button
            android:id="@+id/setNtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/getNtn"
            android:text="SetNTNConfigSignalMask" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setNtn"
            android:text="NTN configSignalMask:"
            android:textSize="20sp" />

    <EditText
            android:id="@+id/ntnMask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textView10"
            android:layout_toRightOf="@id/textView10"
            android:ems="10"
            android:inputType="number" />

    <Button
            android:id="@+id/btnInjectSuplCert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView10"
            android:text="injectSuplCert" />
    <ListView
            android:id="@+id/gnssConfigLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ntnMask" />

</RelativeLayout>
