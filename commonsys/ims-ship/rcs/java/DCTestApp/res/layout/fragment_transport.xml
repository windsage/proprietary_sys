<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DcTransportFragment">
    <!-- Button to create dc connections from xml file -->
    <Button
        android:id="@+id/button_createDcConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:enabled="false"
        android:text="Create DC Connections from file" />

    <Button
        android:id="@+id/button_sendMsgToAllDCConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:enabled="false"
        android:text="SendMsg to All DC Connections" />

    <!-- Header: Available DC Connections -->
    <TextView
        android:id="@+id/textView_dcConnectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:text="Available DC Connections" />

    <!-- DC Connection dropDown with button to open -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner_dcConnections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@android:drawable/btn_dropdown" />
        <Button
            android:id="@+id/button_openDcConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open" />
    </LinearLayout>

    <!-- Button to close all dc connections -->
    <Button
        android:id="@+id/button_closeDcConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:enabled="false"
        android:text="Close all DC Connections" />

    <!-- Section Divider -->
    <View
        style="@style/SectionDivider" />

    <!-- Section Header: Incoming DC Setup Requests -->
    <TextView
        android:id="@+id/textView_dcSetupRequestsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:text="Incoming DC Setup Requests" />

    <!-- DC Setup Request Section with buttons -->
    <LinearLayout
        android:id="@+id/linearLayout_dcSetupRequestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:orientation="vertical">
    </LinearLayout>

    <!-- Section Divider -->
    <View
        style="@style/SectionDivider" />

    <!-- Section Header: Status Message Log -->
    <TextView
        android:id="@+id/textView_dcStatusMessageLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:text="Status Message Log" />

    <!-- Status Message Log Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout_dcStatusMessageLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BodyElement"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
