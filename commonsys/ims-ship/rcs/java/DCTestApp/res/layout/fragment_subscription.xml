<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".SubscriptionFragment">
    <!-- DC Transport dropDown with button to open -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner_dcTransports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@android:drawable/btn_dropdown" />
        <Button
            android:id="@+id/button_openDcTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open" />
    </LinearLayout>

    <!-- Button to cause App crash -->
    <Button
        android:id="@+id/button_triggerAppCrash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:enabled="true"
        android:text="Trigger App Crash" />

    <!-- Section Divider -->
    <View
        style="@style/SectionDivider" />

    <!-- Section Header: Status Message Log -->
    <TextView
        android:id="@+id/textView_dcStatusMessageLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:text="Status Message Log" />

    <!-- Status Message Log Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout_dcStatusMessageLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BodyElement"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
