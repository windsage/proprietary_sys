<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".DcConnectionFragment">

    <!-- Section Header: Data Channel Label -->
    <TextView
        android:id="@+id/textView_dataChannelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Header"
        android:text="dc_label_0" />

    <!-- DC Connection Message Log -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/linearLayout_dcMessageLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BodyElement"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <!-- Send message from file button -->
    <Button
        android:id="@+id/button_sendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:enabled="false"
        android:text="Send Message From File" />

    <!-- Close DC Connection button -->
    <Button
        android:id="@+id/button_closeDcConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BodyElement"
        android:text="Close DC Connection" />

</LinearLayout>
