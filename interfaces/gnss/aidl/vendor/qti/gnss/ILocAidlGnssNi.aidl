package vendor.qti.gnss;

import vendor.qti.gnss.LocAidlGnssUserResponseType;
import vendor.qti.gnss.ILocAidlGnssNiCallback;

@VintfStability
interface ILocAidlGnssNi {
    /**
     * Sends a response to HAL.
     *
     * @param notifId An ID generated by HAL to associate NI notifications and
     * framework responses.
     * @param userResponse A GNSS Ni response indicating if the notification was
     * accepted, denied or not responded to.
     */
    void respond(in int notifId,
        in LocAidlGnssUserResponseType userResponse);

    /**
     * Registers the callbacks for HAL to use.
     *
     * @param callback handle to IGnssNiCallback interface.
     */

    void setVendorCallback(in ILocAidlGnssNiCallback callback);
}
